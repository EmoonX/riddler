{
  "manifest_version": 3,
  "name": "Riddler",
  "description": "Browser extension for Riddler, the online riddle enhancer.",
  "version": "0.4.6",
  "host_permissions": [
    "https://emoon.dev/process",
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "webRequest"
  ],
  "action": {
    "default_icon": "images/letter-r-32.png",
    "default_title": "Riddler",
    "default_popup": "popup.html"
  }
}