{
  "manifest_version": 2,
  "name": "Riddler",
  "version": "0.1.5",

  "description": "Browser extension for the Riddler system.",

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "webRequest",
    "cookies",
    "contextMenus",
    "https://riddler.emoon.dev/process"
  ],

  "optional_permissions": [
    "*://*/*"
  ],

  "browser_action": {
    "default_icon": "images/riddler-32.png",
    "default_title": "Riddler",
    "default_popup": "popup.html"
  }
}
