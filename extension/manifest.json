{
  "manifest_version": 2,
  "name": "Riddler",
  "version": "0.1.5",

  "description": "Browser extension for the Riddler system.",

  "content_scripts": [
    {
      "matches": ["*://riddler.emoon.dev/*"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "options_ui": {
    "page": "options.htm"
  },

  "permissions": [
    "webRequest",
    "cookies",
    "contextMenus",
    "*://riddler.emoon.dev/*"
  ],

  "optional_permissions": [
    "*://*/"
  ],

  "browser_action": {
    "default_icon": "images/riddler-32.png",
    "default_title": "Riddler...",
    "default_popup": "options.htm"
  }
}
