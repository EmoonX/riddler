{
  "manifest_version": 2,
  "name": "Riddler",
  "version": "0.1.3",

  "description": "Browser extension for the Riddler system.",

  "background": {
    "scripts": ["background.js"]
  },

  "options_ui": {
    "page": "options.htm"
  },

  "permissions": [
    "webRequest",
    "cookies",
    "*://riddler.emoon.dev/*",
    "*://*.rnsriddle.com/riddle/*",
    "*://*.gamemastertips.com/cipher/*",
    "*://*.thestringharmony.com/*"
  ]
}
