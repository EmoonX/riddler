{
  "manifest_version": 2,
  "name": "Riddler",
  "version": "0.1.4",

  "description": "Browser extension for the Riddler system.",

  "content_scripts": [
    {
      "matches": ["*://riddler.emoon.dev/*"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "options_ui": {
    "page": "options.htm"
  },

  "permissions": [
    "webRequest",
    "cookies",
    "*://riddler.emoon.dev/*"
  ]
}
